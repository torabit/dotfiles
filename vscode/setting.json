{
  "search.quickOpen.includeHistory": true,
  "search.quickOpen.includeSymbols": true,
  "editor.fontFamily": "HackGenNerd Console",
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.wordWrapColumn": 100,
  "editor.wordWrap": "wordWrapColumn",
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "off",
  "editor.lineNumbers": "relative",
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "solid",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.scrollBeyondLastLine": false,
  "terminal.integrated.fontFamily": "HackGenNerd Console",
  "terminal.integrated.fontSize": 12,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.openDiffOnClick": true,
  "git.showProgress": true,
  "git.showPushSuccessNotification": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "workbench.colorTheme": "papercolor-vscode-dark",
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "path-intellisense.absolutePathToWorkspace": false,
  "path-intellisense.showHiddenFiles": true,
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,

  // Normal mode
  "vim.normalModeKeyBindingsNonRecursive": [
    // window movement
    { "before": ["<C-h>"], "after": ["<C-w>", "h"] },
    { "before": ["<C-j>"], "after": ["<C-w>", "j"] },
    { "before": ["<C-k>"], "after": ["<C-w>", "k"] },
    { "before": ["<C-l>"], "after": ["<C-w>", "l"] },

    // declaration
    {
      "before": ["g", "D"],
      "commands": [{ "commnad": "editor.action.previewDeclaration" }]
    },

    // definitons
    {
      "before": ["g", "d"],
      "commands": [{ "command": "editor.action.peekDefinition" }]
    },

    // hover
    {
      "before": ["K"],
      "commands": [{ "command": "editor.action.showHover" }]
    },

    // rename
    {
      "before": ["<Leader>", "r", "n"],
      "commands": [{ "command": "editor.action.rename" }]
    },

    // diagnostic goto next,prev
    {
      "before": ["]", "e"],
      "commands": [{ "command": "editor.action.marker.next" }]
    },
    {
      "before": ["[", "e"],
      "commands": [{ "command": "editor.action.marker.prev" }]
    },

    { "before": ["s", "s"], "commands": [":split"] }, //水平に開く
    { "before": ["s", "v"], "commands": [":vsplit"] }, //垂直に開く
    { "before": ["<tab>"], "after": ["g", "t"] }, //tab移動
    { "before": ["<s-tab>"], "after": ["g", "T"] }, //tab移動
    { "before": ["<Leader>", "d"], "commands": [":q!"] }, //tabを閉じる
    { "before": ["<Leader>", "q"], "commands": [":qa!"] }, //すべてを閉じる
    { "before": ["<Leader>", "w"], "commands": [":wa"] }, //すべてを保存
    {
      "before": ["t", "e"],
      "commands": [{ "command": "workbench.action.files.newUntitledFile" }]
    },
    {
      "before": ["g", "c", "c"],
      "commands": [{ "command": "editor.action.commentLine" }]
    }, //コメント
    {
      "before": ["<Leader>", ":"],
      "commands": [{ "command": "workbench.action.showCommands" }]
    }, //コマンドパレット
    {
      "before": ["<Leader>", ";"],
      "commands": [{ "command": "workbench.action.quickOpen" }]
    }, //ファイル検索

    // 検索結果を画面中央に
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["*"], "after": ["*", "z", "z"] },
    { "before": ["#"], "after": ["#", "z", "z"] }
  ],

  // Insert mode
  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] }, //jjでノーマルモードに戻る
    { "before": ["<tab>"], "commands": ["editor.action.indentLines"] }, //インデント調整(repeat可能)
    { "before": ["<s-tab>"], "commands": ["editor.action.outdentLines"] } //インデント調整(repeat可能)
  ],

  // Visual Mode
  "vim.visualModeKeyBindingsNonRecursive": [
    // rename
    {
      "before": ["<Leader>", "r", "n"],
      "commands": [{ "command": "editor.action.rename" }]
    }
  ]
}
